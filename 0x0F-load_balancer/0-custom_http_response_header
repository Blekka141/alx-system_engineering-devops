#!/usr/bin/env bash
# Installs Nginx and configures it to serve a custom HTTP header X-Served-By with the hostname of the server.

# Update package index
apt-get update

# Install Nginx
apt-get install -y nginx

# Ensure Nginx starts on boot
systemctl enable nginx

# Create web content directories and default pages
mkdir -p /var/www/html
echo "Hello World" > /var/www/html/index.html
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Set the hostname variable to be used in the Nginx config
HOSTNAME=$(hostname)

# Write the Nginx server configuration
cat <<EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    add_header X-Served-By '$HOSTNAME';
    root /var/www/html;
    index index.html index.htm;

    location /redirect_me {
        return 301 http://cuberule.com/;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }
}
EOF

# Reload Nginx to apply changes
systemctl restart nginx
